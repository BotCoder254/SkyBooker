<!-- 500 Page -->
<div class="min-h-screen bg-gray-100 flex flex-col justify-center items-center px-4">
    <div class="text-center">
        <div class="mb-8">
            <i class="fas fa-exclamation-triangle text-9xl text-red-500"></i>
        </div>
        <h1 class="text-9xl font-bold text-red-500">500</h1>
        <p class="text-2xl font-medium text-gray-600 mt-4">Server Error</p>
        <p class="text-gray-500 mt-2">Oops! Something went wrong on our end.</p>
        <p class="text-gray-500 mt-1">Our team has been notified and is working on it.</p>
        <div class="mt-8 space-x-4">
            <% if (user && user.role === 'admin') { %>
                <a href="/admin/dashboard" class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-500 hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
                    <i class="fas fa-chart-line mr-2"></i>
                    Back to Admin Dashboard
                </a>
            <% } else if (user) { %>
                <a href="/dashboard" class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-500 hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
                    <i class="fas fa-home mr-2"></i>
                    Back to Dashboard
                </a>
            <% } else { %>
                <a href="/" class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-500 hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
                    <i class="fas fa-home mr-2"></i>
                    Back to Home
                </a>
            <% } %>
            <button onclick="window.history.back()" class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
                <i class="fas fa-arrow-left mr-2"></i>
                Go Back
            </button>
            <button onclick="window.location.reload()" class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
                <i class="fas fa-redo mr-2"></i>
                Try Again
            </button>
        </div>
    </div>
</div>