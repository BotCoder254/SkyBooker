<%- include('../partials/admin-header') %>

<div class="flex-1">
    <!-- Main Content -->
    <div class="flex-1 overflow-hidden">
        <!-- Top Navigation -->
        <header class="bg-white shadow-sm">
            <div class="max-w-7xl mx-auto py-4 px-4 sm:px-6 lg:px-8">
                <div class="flex items-center justify-between">
                    <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:text-3xl sm:truncate">
                        Welcome Back, Admin!
                    </h2>
                    <div class="flex items-center space-x-4">
                        <a href="/admin/flights" class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
                            <i class="fas fa-plus mr-2"></i>
                            Add New Flight
                        </a>
                    </div>
                </div>
            </div>
        </header>

        <!-- Dashboard Content -->
        <main class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
            <!-- Stats Grid -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
                <!-- Total Revenue -->
                <div class="bg-white overflow-hidden shadow rounded-lg transform transition-all duration-300 hover:scale-105">
                    <div class="p-5">
                        <div class="flex items-center">
                            <div class="flex-shrink-0 bg-red-500 rounded-md p-3">
                                <i class="fas fa-dollar-sign text-white text-2xl"></i>
                            </div>
                            <div class="ml-5 w-0 flex-1">
                                <dl>
                                    <dt class="text-sm font-medium text-gray-500 truncate">Total Revenue</dt>
                                    <dd class="text-2xl font-semibold text-gray-900" id="totalRevenue">
                                        <div class="animate-pulse flex space-x-4">
                                            <div class="h-8 w-24 bg-gray-200 rounded"></div>
                                        </div>
                                    </dd>
                                    <dd class="text-sm text-gray-500" id="avgRevenue">
                                        <div class="animate-pulse flex space-x-4">
                                            <div class="h-4 w-32 bg-gray-200 rounded"></div>
                                        </div>
                                    </dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Total Bookings -->
                <div class="bg-white overflow-hidden shadow rounded-lg transform transition-all duration-300 hover:scale-105">
                    <div class="p-5">
                        <div class="flex items-center">
                            <div class="flex-shrink-0 bg-green-500 rounded-md p-3">
                                <i class="fas fa-ticket-alt text-white text-2xl"></i>
                            </div>
                            <div class="ml-5 w-0 flex-1">
                                <dl>
                                    <dt class="text-sm font-medium text-gray-500 truncate">Total Bookings</dt>
                                    <dd class="text-2xl font-semibold text-gray-900" id="totalBookings">
                                        <div class="animate-pulse flex space-x-4">
                                            <div class="h-8 w-20 bg-gray-200 rounded"></div>
                                        </div>
                                    </dd>
                                    <dd class="text-sm text-gray-500" id="confirmedBookings">
                                        <div class="animate-pulse flex space-x-4">
                                            <div class="h-4 w-28 bg-gray-200 rounded"></div>
                                        </div>
                                    </dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Active Flights -->
                <div class="bg-white overflow-hidden shadow rounded-lg transform transition-all duration-300 hover:scale-105">
                    <div class="p-5">
                        <div class="flex items-center">
                            <div class="flex-shrink-0 bg-purple-500 rounded-md p-3">
                                <i class="fas fa-plane text-white text-2xl"></i>
                            </div>
                            <div class="ml-5 w-0 flex-1">
                                <dl>
                                    <dt class="text-sm font-medium text-gray-500 truncate">Active Flights</dt>
                                    <dd class="text-2xl font-semibold text-gray-900" id="activeFlights">
                                        <div class="animate-pulse flex space-x-4">
                                            <div class="h-8 w-16 bg-gray-200 rounded"></div>
                                        </div>
                                    </dd>
                                    <dd class="text-sm text-gray-500" id="totalFlights">
                                        <div class="animate-pulse flex space-x-4">
                                            <div class="h-4 w-32 bg-gray-200 rounded"></div>
                                        </div>
                                    </dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Total Users -->
                <div class="bg-white overflow-hidden shadow rounded-lg transform transition-all duration-300 hover:scale-105">
                    <div class="p-5">
                        <div class="flex items-center">
                            <div class="flex-shrink-0 bg-yellow-500 rounded-md p-3">
                                <i class="fas fa-users text-white text-2xl"></i>
                            </div>
                            <div class="ml-5 w-0 flex-1">
                                <dl>
                                    <dt class="text-sm font-medium text-gray-500 truncate">Total Users</dt>
                                    <dd class="text-2xl font-semibold text-gray-900" id="totalUsers">
                                        <div class="animate-pulse flex space-x-4">
                                            <div class="h-8 w-20 bg-gray-200 rounded"></div>
                                        </div>
                                    </dd>
                                    <dd class="text-sm text-gray-500" id="activeUsers">
                                        <div class="animate-pulse flex space-x-4">
                                            <div class="h-4 w-28 bg-gray-200 rounded"></div>
                                        </div>
                                    </dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Charts Section -->
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                <!-- Revenue Chart -->
                <div class="bg-white shadow rounded-lg p-6 transform transition-all duration-300 hover:scale-105">
                    <h3 class="text-lg font-medium text-gray-900 mb-4">Revenue Overview</h3>
                    <div id="revenueChart" class="h-80">
                        <div class="animate-pulse flex flex-col space-y-4 h-full">
                            <div class="h-2 bg-gray-200 rounded w-1/4"></div>
                            <div class="space-y-3 flex-grow">
                                <div class="h-40 bg-gray-200 rounded"></div>
                                <div class="h-24 bg-gray-200 rounded"></div>
                                <div class="h-32 bg-gray-200 rounded"></div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Bookings Chart -->
                <div class="bg-white shadow rounded-lg p-6 transform transition-all duration-300 hover:scale-105">
                    <h3 class="text-lg font-medium text-gray-900 mb-4">Booking Trends</h3>
                    <div id="bookingsChart" class="h-80">
                        <div class="animate-pulse flex flex-col space-y-4 h-full">
                            <div class="h-2 bg-gray-200 rounded w-1/4"></div>
                            <div class="space-y-3 flex-grow">
                                <div class="h-24 bg-gray-200 rounded"></div>
                                <div class="h-32 bg-gray-200 rounded"></div>
                                <div class="h-28 bg-gray-200 rounded"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recent Activity -->
            <div class="mt-8">
                <div class="bg-white shadow rounded-lg transform transition-all duration-300 hover:scale-[1.02]">
                    <div class="px-6 py-4 border-b border-gray-200">
                        <h3 class="text-lg font-medium text-gray-900">Recent Activity</h3>
                    </div>
                    <div class="bg-gray-50 px-6 py-4">
                        <div class="flow-root">
                            <ul class="-mb-8" id="recentActivity">
                                <li>
                                    <div class="animate-pulse space-y-4 pb-8">
                                        <div class="h-4 bg-gray-200 rounded w-3/4"></div>
                                        <div class="h-4 bg-gray-200 rounded w-1/2"></div>
                                        <div class="h-4 bg-gray-200 rounded w-5/6"></div>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>

<!-- ApexCharts -->
<script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
<script>
let revenueChart, bookingsChart;

document.addEventListener('DOMContentLoaded', () => {
    initializeCharts();
    fetchDashboardData();
    // Set up real-time updates every 15 seconds
    setInterval(fetchDashboardData, 15000);
});

function initializeCharts() {
    // Revenue Chart Configuration
    const revenueOptions = {
        chart: {
            type: 'area',
            height: 320,
            toolbar: { show: false },
            animations: {
                enabled: true,
                easing: 'easeinout',
                speed: 800,
                animateGradually: {
                    enabled: true,
                    delay: 150
                },
                dynamicAnimation: {
                    enabled: true,
                    speed: 350
                }
            }
        },
        series: [{ name: 'Revenue', data: [] }],
        colors: ['#EF4444'],
        fill: {
            type: 'gradient',
            gradient: {
                shadeIntensity: 1,
                opacityFrom: 0.7,
                opacityTo: 0.3,
                stops: [0, 90, 100]
            }
        },
        stroke: { curve: 'smooth', width: 2 },
        xaxis: {
            type: 'datetime',
            labels: { style: { colors: '#64748B' } }
        },
        yaxis: {
            labels: {
                style: { colors: '#64748B' },
                formatter: (value) => formatCurrency(value)
            }
        },
        tooltip: {
            theme: 'light',
            y: {
                formatter: (value) => formatCurrency(value)
            }
        }
    };

    // Bookings Chart Configuration
    const bookingsOptions = {
        chart: {
            type: 'bar',
            height: 320,
            toolbar: { show: false },
            animations: {
                enabled: true,
                easing: 'easeinout',
                speed: 800,
                dynamicAnimation: {
                    enabled: true,
                    speed: 350
                }
            }
        },
        series: [{ name: 'Bookings', data: [] }],
        colors: ['#EF4444'],
        plotOptions: {
            bar: {
                borderRadius: 8,
                columnWidth: '60%',
                dataLabels: {
                    position: 'top'
                }
            }
        },
        xaxis: {
            type: 'datetime',
            labels: { style: { colors: '#64748B' } }
        },
        yaxis: { labels: { style: { colors: '#64748B' } } },
        tooltip: {
            theme: 'light'
        }
    };

    revenueChart = new ApexCharts(document.querySelector("#revenueChart"), revenueOptions);
    bookingsChart = new ApexCharts(document.querySelector("#bookingsChart"), bookingsOptions);
    
    revenueChart.render();
    bookingsChart.render();
}

async function fetchDashboardData() {
    try {
        const response = await fetch('/api/admin/dashboard/stats');
        const data = await response.json();
        
        if (response.ok) {
            // Update stats with smooth transitions
            updateStatWithAnimation('totalRevenue', formatCurrency(data.revenue.totalRevenue));
            updateStatWithAnimation('avgRevenue', `Avg. ${formatCurrency(data.revenue.averageBookingValue)} per booking`);
            updateStatWithAnimation('totalBookings', data.bookings.totalBookings.toLocaleString());
            updateStatWithAnimation('confirmedBookings', `${data.bookings.confirmedBookings.toLocaleString()} confirmed`);
            updateStatWithAnimation('activeFlights', data.flights.activeFlights.toLocaleString());
            updateStatWithAnimation('totalFlights', `Out of ${data.flights.totalFlights.toLocaleString()} total`);
            updateStatWithAnimation('totalUsers', data.users.totalUsers.toLocaleString());
            updateStatWithAnimation('activeUsers', `${data.users.activeUsers.toLocaleString()} active`);
            
            // Update charts
            updateCharts(data.bookingTrends, data.revenueTrends);
            
            // Update recent activity
            updateRecentActivityWithAnimation(data.recentActivity);
        } else {
            throw new Error(data.message || 'Failed to fetch dashboard data');
        }
    } catch (error) {
        console.error('Error fetching dashboard data:', error);
        showToast('Failed to load dashboard data. Please try again later.', 'error');
    }
}

function formatCurrency(value) {
    return new Intl.NumberFormat('en-US', {
        style: 'currency',
        currency: 'USD'
    }).format(value);
}

function updateStatWithAnimation(elementId, newValue) {
    const element = document.getElementById(elementId);
    if (!element) return;

    // Remove loading animation if present
    const loadingDiv = element.querySelector('.animate-pulse');
    if (loadingDiv) {
        element.innerHTML = newValue;
        return;
    }

    // Add transition effect
    element.style.transition = 'opacity 0.3s ease-in-out';
    element.style.opacity = '0';
    
    setTimeout(() => {
        element.innerHTML = newValue;
        element.style.opacity = '1';
    }, 300);
}

function updateCharts(bookingTrends, revenueTrends) {
    const bookingsData = bookingTrends.map(item => ({
        x: new Date(item.date).getTime(),
        y: item.count
    }));

    const revenueData = revenueTrends.map(item => ({
        x: new Date(item.date).getTime(),
        y: item.amount
    }));

    bookingsChart.updateSeries([{
        name: 'Bookings',
        data: bookingsData
    }]);

    revenueChart.updateSeries([{
        name: 'Revenue',
        data: revenueData
    }]);
}

function updateRecentActivityWithAnimation(activities) {
    const container = document.getElementById('recentActivity');
    if (!container) return;

    // Fade out
    container.style.transition = 'opacity 0.3s ease-in-out';
    container.style.opacity = '0';

    setTimeout(() => {
        if (!activities || activities.length === 0) {
            container.innerHTML = `
                <li>
                    <div class="relative pb-8">
                        <p class="text-sm text-gray-500 text-center">No recent activity</p>
                    </div>
                </li>
            `;
        } else {
            container.innerHTML = activities.map(activity => `
                <li>
                    <div class="relative pb-8">
                        <span class="absolute top-4 left-4 -ml-px h-full w-0.5 bg-gray-200"></span>
                        <div class="relative flex space-x-3">
                            <div>
                                <span class="h-8 w-8 rounded-full ${activity.iconBg} flex items-center justify-center ring-8 ring-white">
                                    <i class="fas ${activity.icon} text-white"></i>
                                </span>
                            </div>
                            <div class="min-w-0 flex-1 pt-1.5 flex justify-between space-x-4">
                                <div>
                                    <p class="text-sm text-gray-500">${activity.message}</p>
                                </div>
                                <div class="text-right text-sm whitespace-nowrap text-gray-500">
                                    <time>${activity.timeAgo}</time>
                                </div>
                            </div>
                        </div>
                    </div>
                </li>
            `).join('');
        }
        // Fade in
        container.style.opacity = '1';
    }, 300);
}
</script>